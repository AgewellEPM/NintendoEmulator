{
  "name": "nintendo-emulator-backend",
  "version": "1.0.0",
  "description": "Secure OAuth proxy and authentication backend for Nintendo Emulator",
  "main": "oauth-proxy.js",
  "scripts": {
    "start": "node oauth-proxy.js",
    "start:auth": "node auth-service.js",
    "start:all": "concurrently \"npm run start\" \"npm run start:auth\"",
    "dev": "nodemon oauth-proxy.js",
    "dev:auth": "nodemon auth-service.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:auth\"",
    "test": "node test-deployment.js",
    "health": "node health-check.js"
  },
  "keywords": ["oauth", "proxy", "security", "authentication", "nintendo", "emulator"],
  "author": "Nintendo Emulator Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "argon2": "^0.31.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  }
}